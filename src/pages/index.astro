---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ssds from '../data/ssds.json';
import '../global.css';

// Filter: Nur PS5 kompatible SSDs auf der Startseite anzeigen
// Wir ignorieren hier bewusst "inkompatible" Gen3 Drives, um die Startseite sauber zu halten,
// oder wir zeigen alle und lassen den User filtern.
// Hier zeigen wir alle PS5-relevanten (auch Gen4 ohne Heatsink).
const ps5SSDs = ssds.filter(ssd => ssd.compatibility.includes('ps5'));
const sortedSSDs = ps5SSDs.sort((a, b) => a.name.localeCompare(b.name));

// SEO Metadata
const title = "PS5 SSD Speichererweiterung: Test & Vergleich (2026)";
const description = "Ist deine PS5 voll? Finde die beste M.2 SSD für PlayStation 5. Wir testen Geschwindigkeit, Heatsink-Kompatibilität und Preis-Leistung.";
---

<Layout title={title} description={description}>
  <main class="max-w-4xl mx-auto px-6 py-20">
    
    <div class="text-center mb-12">
      <h1 class="text-5xl md:text-7xl font-extrabold mb-6 tracking-tight">
        PS5 <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400">Ready?</span>
      </h1>
      <p class="text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed">
        Die größte Datenbank für PlayStation 5 Speichererweiterungen.
        Wir prüfen Geschwindigkeit, Heatsink und Formfaktor automatisch.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-4xl mx-auto mb-16">
      
      {/* WICHTIG: Slash am Ende hinzugefügt */}
      <a href="/ssd/samsung-990-pro-1tb/" class="bg-slate-800/50 hover:bg-slate-800 border border-slate-700 hover:border-blue-500 p-4 rounded-xl transition group text-left backdrop-blur-sm">
        <div class="text-xs font-bold text-blue-400 uppercase tracking-wider mb-1">Der Testsieger</div>
        <div class="font-bold text-white group-hover:text-blue-300 transition">Samsung 990 PRO</div>
        <div class="text-slate-400 text-sm mt-1">Beste Allround-Leistung & Zuverlässigkeit.</div>
      </a>

      {/* WICHTIG: Slash am Ende hinzugefügt */}
      <a href="/ssd/lexar-nm790-heatsink-1tb/" class="bg-slate-800/50 hover:bg-slate-800 border border-slate-700 hover:border-emerald-500 p-4 rounded-xl transition group text-left backdrop-blur-sm">
        <div class="text-xs font-bold text-emerald-400 uppercase tracking-wider mb-1">Preis-Tipp</div>
        <div class="font-bold text-white group-hover:text-emerald-300 transition">Lexar NM790</div>
        <div class="text-slate-400 text-sm mt-1">Unschlagbar günstig & schnell genug.</div>
      </a>

      {/* WICHTIG: Slash am Ende hinzugefügt */}
      <a href="/ssd/wd-black-sn850x-heatsink-1tb/" class="bg-slate-800/50 hover:bg-slate-800 border border-slate-700 hover:border-orange-500 p-4 rounded-xl transition group text-left backdrop-blur-sm">
        <div class="text-xs font-bold text-orange-400 uppercase tracking-wider mb-1">Gamer Choice</div>
        <div class="font-bold text-white group-hover:text-orange-300 transition">WD_BLACK SN850X</div>
        <div class="text-slate-400 text-sm mt-1">Offizielle Empfehlung vieler Profis.</div>
      </a>

    </div>

    <div class="relative max-w-xl mx-auto mb-16 group z-10">
      <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl blur opacity-30 group-hover:opacity-75 transition duration-200"></div>
      <div class="relative bg-slate-900 rounded-2xl border border-white/10 p-4 flex items-center shadow-2xl">
          <svg class="w-6 h-6 text-slate-500 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          <input id="search-input" type="text" placeholder="Suche nach SSD (z.B. Samsung 990)..." class="w-full bg-transparent border-none focus:ring-0 text-white placeholder-slate-500 ml-4 outline-none">
      </div>
    </div>

    <div class="grid gap-4">
      {sortedSSDs.map((ssd) => (
        /* WICHTIG: Slash am Ende hinzugefügt bei der dynamischen URL */
        <a href={`/ssd/${ssd.id}/`} class="ssd-card group relative block">
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500/0 via-blue-500/0 to-blue-500/0 group-hover:from-blue-500/5 group-hover:via-purple-500/5 group-hover:to-blue-500/5 transition duration-500 rounded-xl"></div>
          <div class="bg-white/5 hover:bg-white/10 border border-white/5 hover:border-white/20 backdrop-blur-sm rounded-xl p-6 transition-all duration-300 flex items-center justify-between group-hover:translate-x-1">
              
              <div class="flex items-center gap-4">
                  <div class="w-10 h-10 rounded-lg bg-slate-800 flex items-center justify-center text-xs font-bold text-slate-400 border border-slate-700 shrink-0">
                      {ssd.brand.substring(0,2).toUpperCase()}
                  </div>
                  <div>
                      <h2 class="font-bold text-lg text-slate-200 group-hover:text-white transition">{ssd.name}</h2>
                      <p class="text-sm text-slate-500 font-mono">{ssd.read_speed_mb_s} MB/s • {ssd.interface}</p>
                  </div>
              </div>

              <div class="flex items-center gap-4">
                  {ssd.interface.includes('3.0') || ssd.read_speed_mb_s < 5500 ? (
                      <span class="hidden sm:inline-block px-3 py-1 rounded-full text-xs font-bold bg-red-500/10 text-red-400 border border-red-500/20">Inkompatibel</span>
                  ) : !ssd.has_heatsink ? (
                      <span class="hidden sm:inline-block px-3 py-1 rounded-full text-xs font-bold bg-yellow-500/10 text-yellow-400 border border-yellow-500/20">Heatsink fehlt</span>
                  ) : (
                      <span class="hidden sm:inline-block px-3 py-1 rounded-full text-xs font-bold bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">Kompatibel</span>
                  )}
                  
                  <svg class="w-5 h-5 text-slate-600 group-hover:text-white transition transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
              </div>
          </div>
        </a>
      ))}
    </div>

  </main>
</Layout>

<script>
    // Client-Side Search Logic
    const input = document.getElementById('search-input');
    const cards = document.querySelectorAll('.ssd-card');

    if(input) {
        input.addEventListener('input', (e) => {
            // @ts-ignore
            const term = e.target.value.toLowerCase();
            cards.forEach(card => {
                // @ts-ignore
                const text = card.innerText.toLowerCase();
                // @ts-ignore
                if (text.includes(term)) {
                    // @ts-ignore
                    card.style.display = 'block';
                } else {
                    // @ts-ignore
                    card.style.display = 'none';
                }
            });
        });
    }
</script>