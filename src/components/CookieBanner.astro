<div id="cookie-banner" class="fixed bottom-0 left-0 w-full bg-[#111113] border-t border-white/10 p-4 z-50 hidden transform transition-transform duration-300 translate-y-full">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
    
    <div class="text-slate-300 text-sm flex-1">
      <p>
        Wir nutzen Cookies, um die Website technisch bereitstellen zu können. 
        Mit dem Klick auf "Alles akzeptieren" willigst du ein, dass wir externe Inhalte (z.B. Affiliate-Links) laden und anonyme Statistiken (Google Analytics) erfassen dürfen.
        Weitere Infos in der <a href="/datenschutz" class="text-blue-400 hover:underline">Datenschutzerklärung</a>.
      </p>
    </div>

    <div class="flex gap-3 shrink-0">
      <button id="cookie-reject" class="px-4 py-2 text-sm font-medium bg-slate-700 text-white rounded-lg hover:bg-slate-600 transition shadow-lg shadow-slate-500/10">
        Nur Essenzielle
      </button>

      <button id="cookie-accept" class="px-4 py-2 text-sm font-medium bg-blue-600 text-white rounded-lg hover:bg-blue-500 transition shadow-lg shadow-blue-500/20">
        Alles akzeptieren*
      </button>
    </div>

  </div>
</div>

<script>
  // DEINE ID
  const GA_MEASUREMENT_ID = 'G-BJLTLNSE93'; 

  function getCookieConsent() {
    return localStorage.getItem('cookie-consent');
  }

  function loadGoogleAnalytics() {
    if (!GA_MEASUREMENT_ID) return;
    if (document.getElementById('ga-script')) return;

    // 1. Script laden
    const script = document.createElement('script');
    script.id = 'ga-script';
    script.async = true;
    script.src = `https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`;
    document.head.appendChild(script);

    // 2. Initialisierung (TypeScript-sicher gemacht mit 'window as any')
    const w = window as any;
    w.dataLayer = w.dataLayer || [];
    
    // Wir nutzen '...args' statt 'arguments', damit TypeScript nicht meckert
    function gtag(...args: any[]) { 
      w.dataLayer.push(args); 
    }
    
    gtag('js', new Date());
    gtag('config', GA_MEASUREMENT_ID, { 'anonymize_ip': true });
    
    console.log('Google Analytics geladen.');
  }

  const banner = document.getElementById('cookie-banner');
  const acceptBtn = document.getElementById('cookie-accept');
  const rejectBtn = document.getElementById('cookie-reject');

  if (!getCookieConsent()) {
    banner?.classList.remove('hidden');
    setTimeout(() => {
      banner?.classList.remove('translate-y-full');
    }, 100);
  } else if (getCookieConsent() === 'accepted') {
    loadGoogleAnalytics();
  }

  acceptBtn?.addEventListener('click', () => {
    localStorage.setItem('cookie-consent', 'accepted');
    loadGoogleAnalytics();
    hideBanner();
  });

  rejectBtn?.addEventListener('click', () => {
    localStorage.setItem('cookie-consent', 'essential');
    hideBanner();
  });

  function hideBanner() {
    banner?.classList.add('translate-y-full');
    setTimeout(() => {
      banner?.classList.add('hidden');
    }, 300);
  }
</script>