---
// src/components/TechSpecs.astro
const { ssd } = Astro.props;
---

<div class="bg-white/5 rounded-2xl border border-white/10 p-6 backdrop-blur-sm">
    <h3 class="text-sm font-mono uppercase text-slate-500 mb-6">Technische Daten</h3>
    <div class="space-y-4 font-mono text-sm">
        <div class="flex justify-between items-center border-b border-white/5 pb-4">
          <span class="text-slate-400">Interface</span>
          <span class="text-white">{ssd.interface}</span>
        </div>
        <div class="flex justify-between items-center border-b border-white/5 pb-4">
          <span class="text-slate-400">Heatsink</span>
          <span class={ssd.has_heatsink ? 'text-green-400' : 'text-yellow-400'}>
            {ssd.has_heatsink ? 'Verbaut (Included)' : 'Nicht verbaut (Not included)'}
          </span>
        </div>
        <div class="flex justify-between items-center border-b border-white/5 pb-4">
          <span class="text-slate-400">Höhe</span>
          <span class="text-white">{ssd.height_mm} mm</span>
        </div>
        <div class="flex justify-between items-center pb-2">
            <span class="text-slate-400">Kapazität</span>
            <span class="text-white">{ssd.capacity_gb >= 1000 ? `${ssd.capacity_gb/1000} TB` : `${ssd.capacity_gb} GB`}</span>
        </div>
    </div>
</div>