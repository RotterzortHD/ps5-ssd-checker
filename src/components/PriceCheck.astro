---
// src/components/PriceCheck.astro
import heatsinks from '../data/heatsinks.json';
import tools from '../data/tools.json';

const { ssd } = Astro.props;

// Helper zum ASIN reinigen (mit Typ 'any' gegen Fehler)
const cleanAsin = (val: any) => {
    if (!val) return ''; 
    return String(val).replace(/[^a-zA-Z0-9]/g, '');
};

const affiliateTag = "ps5ssd21-21";
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    
    <div class="bg-slate-900/50 rounded-2xl border border-white/10 p-6 flex flex-col justify-center">
        <div class="text-center mb-6">
            <span class="text-slate-400 text-sm">Aktuellen Preis prÃ¼fen bei</span>
        </div>
        
        <a href={`https://www.amazon.de/dp/${cleanAsin(ssd.asin)}?tag=${affiliateTag}`} 
           target="_blank" 
           rel="noopener nofollow sponsored" 
           class="group relative block w-full mb-4">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl blur opacity-30 group-hover:opacity-100 transition duration-200"></div>
            <div class="relative flex items-center justify-between bg-slate-900 border border-white/10 rounded-2xl px-6 py-5 hover:bg-slate-800 transition">
                <span class="font-bold text-lg text-white">Auf Amazon ansehen*</span>
                <span class="text-slate-400 group-hover:text-white transition">âž”</span>
            </div>
        </a>
        <p class="text-center text-xs text-slate-600">*Werbelink. Wir erhalten ggf. eine Provision.</p>
    </div>

    <div class="bg-slate-900/50 rounded-2xl border border-white/10 p-6">
        <h3 class="text-xs font-bold uppercase text-slate-500 mb-4 tracking-wider">Wird oft zusammen gekauft</h3>
        <div class="space-y-3">
            
            <div class="flex items-center gap-3 opacity-50">
                <div class="w-5 h-5 rounded-full bg-emerald-500/20 text-emerald-500 flex items-center justify-center text-xs">âœ“</div>
                <span class="text-sm text-slate-300 line-through">{ssd.name}</span>
            </div>

            {!ssd.has_heatsink && heatsinks[0] && (
                <a href={`https://www.amazon.de/dp/${cleanAsin(heatsinks[0].asin)}?tag=${affiliateTag}`} 
                   target="_blank" 
                   rel="noopener nofollow sponsored" 
                   class="flex items-center gap-3 group cursor-pointer hover:bg-white/5 p-2 rounded -mx-2 transition">
                    <div class="w-5 h-5 rounded border border-slate-600 group-hover:border-amber-400 flex items-center justify-center text-slate-900 group-hover:text-amber-400 transition bg-slate-800">
                        <span class="text-xs font-bold text-slate-500 group-hover:text-amber-400">+</span>
                    </div>
                    <div class="text-sm">
                        <span class="text-amber-400 font-bold block group-hover:underline">Passender Heatsink*</span>
                        <span class="text-xs text-slate-500">Empfohlen fÃ¼r diese SSD</span>
                    </div>
                </a>
            )}

            {tools[0] && (
                <a href={`https://www.amazon.de/dp/${cleanAsin(tools[0].asin)}?tag=${affiliateTag}`} 
                   target="_blank" 
                   rel="noopener nofollow sponsored" 
                   class="flex items-center gap-3 group cursor-pointer hover:bg-white/5 p-2 rounded -mx-2 transition">
                    <div class="w-5 h-5 rounded border border-slate-600 group-hover:border-blue-400 flex items-center justify-center text-slate-900 group-hover:text-blue-400 transition bg-slate-800">
                        <span class="text-xs font-bold text-slate-500 group-hover:text-blue-400">+</span>
                    </div>
                    <div class="text-sm">
                        <span class="text-blue-300 font-bold block group-hover:underline">{tools[0].name}*</span>
                        <span class="text-xs text-slate-500">Wichtig fÃ¼r den Einbau</span>
                    </div>
                </a>
            )}
        </div>
    </div>
</div>

{!ssd.has_heatsink && (
    <div class="mt-8 bg-gradient-to-br from-amber-900/20 to-orange-900/10 border border-amber-500/20 rounded-2xl p-6 flex items-start gap-4">
        <div class="text-3xl">ðŸ”¥</div>
        <div>
            <h3 class="text-lg font-bold text-white mb-1">Achtung: Hitzestau vermeiden!</h3>
            <p class="text-sm text-slate-400 mb-4">Diese SSD hat keinen KÃ¼hler. Sony schreibt einen Heatsink zwingend vor.</p>
            <div class="flex gap-2 flex-wrap">
                {heatsinks.slice(0, 2).map((sink) => (
                    <a href={`https://www.amazon.de/dp/${cleanAsin(sink.asin)}?tag=${affiliateTag}`} 
                       target="_blank"
                       rel="noopener nofollow sponsored"
                       class="text-xs bg-amber-500/10 text-amber-500 border border-amber-500/30 px-3 py-2 rounded hover:bg-amber-500 hover:text-black transition">
